# Taps
tap 'homebrew/bundle'

# Ensure that apps get installed in system Applications Folder

cask_args appdir: '/Applications'

#Install ZSH
brew 'zsh' 
brew 'zsh-completions'

# Install Core Utils
brew 'coreutils' 
brew 'findutils' 

# Install needful binaries
brew 'tree'  
brew 'wget' 
brew "kubernetes-cli" 
brew "kubectx"
brew "nano"
brew "helm" 
brew "gnupg"

